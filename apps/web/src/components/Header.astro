---
import Logo from "./Logo.astro";
import NavLink from "./NavLink.astro";

const links = [
  { href: "/", label: "Home" },
  { href: "/services", label: "Services" },
  { href: "/before-your-visit", label: "Before your visit" },
  { href: "/book", label: "Book now" },
  { href: "/contact", label: "Contact" },
  { href: "/staff", label: "Staff" },
];
---

<div class="drawer">
  <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-primary w-full">
      <div class="flex-none lg:hidden">
        <label
          for="my-drawer-2"
          aria-label="open sidebar"
          class="btn btn-square btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
      <div class="mx-2 flex-1 px-2">
        <a href="/" class="text-primary-content hover:text-primary-content/90">
          <Logo />
        </a>
      </div>
      <nav class="hidden flex-none lg:block" aria-label="Main navigation">
        <ul class="menu menu-horizontal px-1">
          {
            links.map((link) => (
              <li class="mr-8">
                <NavLink href={link.href} label={link.label} />
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <hr class="border-base-300" />
    <!-- Page content -->
    <main class="flex-1">
      <slot />
    </main>
  </div>
  <div class="drawer-side">
    <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <ul class="menu bg-base-200 min-h-full w-80 p-4 text-base-content">
      {
        links.map((link) => (
          <li class="mr-8">
            <NavLink href={link.href} label={link.label} menuItem />
          </li>
        ))
      }
    </ul>
  </div>
</div>
