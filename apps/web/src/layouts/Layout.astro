---
import "../styles/global.css";
import { Font } from "astro:assets";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import SkipLink from "../components/SkipLink.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Lucy Russell Hair â€“ Calm, sensory-friendly mobile hairdresser in Bournemouth & Poole",
  description = "Sensory-friendly mobile hairdressing at home in Bournemouth, Poole and nearby. Specialising in neurodivergent clients, carers and people who prefer quiet, predictable appointments.",
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="hairdresser-dark">
  <head>
    <meta charset="UTF-8" />
    <!-- Preload fonts to prevent flash of unstyled text -->
    <Font cssVariable="--font-fraunces" preload />
    <Font cssVariable="--font-source-sans-3" preload />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Fonts: preconnect then preload for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600&family=Source+Sans+3:ital,wght@0,400;0,600&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600&family=Source+Sans+3:ital,wght@0,400;0,600&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600&family=Source+Sans+3:ital,wght@0,400;0,600&display=swap"
      />
    </noscript>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body
    class="flex min-h-screen flex-col bg-base-100 font-sans text-base-content"
  >
    <SkipLink />
    <Header />
    <main class="flex-1" id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
