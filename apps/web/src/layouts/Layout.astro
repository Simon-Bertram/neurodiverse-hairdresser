---
import Header from "../components/Header.astro";

interface Props {
  title?: string;
}

const { title = "Lucy Russell Hair" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="hairdresser-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <header>
      <Header />
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-8 border-t border-base-300">
      <div
        class="container mx-auto max-w-3xl px-4 py-6 text-sm text-base-content/70"
      >
        <p>Â© {new Date().getFullYear()} Lucy Russell Hair</p>
      </div>
    </footer>
  </body>
</html>
